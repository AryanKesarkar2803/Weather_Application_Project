    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up Page</title>
</head>
<body>
    <div id="header">
        <form action="http://localhost:8000/" method="get">
            <button type="submit" id="back_btn">Back</button>
          </form>
        <h1 id="h1">Sign Up Page</h1>
    </div>
    
    <div id="div1">
        <form action="http://localhost:8000/signup" method="post">
            <div id="div2">
                <label for="name">Name : <input type="text" name="name" required id="name" class="inp"></label>
                <label for="email">Email : <input type="text" name="email" required id="email" class="inp"></label>
                <label for="city">City : <input type="text" name="city" id="city"required class="inp"></label>
                <label for="password">Password : <input type="password" name="password" required id="password" class="inp"></label>
            </div>
            <button type="submit" id="btn">Sign Up</button>
        </form>
    </div>
</body>
